<header class="d-flex align-items-center">
    <a href="/" class="btn btn-outline-success me-2">
        <i class="bi bi-arrow-left"></i>
    </a>
    <h1>Cadastro</h1>
</header>

<br>

<div class="position-relative" style="min-height: 65vh;">
    <div class="position-absolute top-50 start-50 translate-middle" style="width: 50%;">
        <form action="/cadastrar" method="POST">
            <div class="mb-3">
                <label class="form-label">Nome de usuário</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Insira seu nome de usuário">
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="Insira seu email">
            </div>
            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" placeholder="Insira a sua senha">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="nivel_de_acesso" id="radioDefault1" value="0" checked>
                <label class="form-check-label" for="radioDefault1">
                    Usuário Padrão
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="nivel_de_acesso" id="radioDefault2" value="1">
                <label class="form-check-label" for="radioDefault2">
                    Administrador
                </label>
            </div>
            <div class="d-flex">
                <button type="submit" class="btn btn-primary w-100 mt-2" id="okButton">Criar</button>
            </div>
        </form>
    </div>
</div>