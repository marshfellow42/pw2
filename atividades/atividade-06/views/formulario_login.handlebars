<div class="position-relative" style="min-height: 80vh;">
    <div class="position-absolute top-50 start-50 translate-middle" style="width: 50%;">
        <form action="/login" method="POST">
            <div class="mb-3">
                <label class="form-label">Nome de usuário</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Insira seu nome de usuário">
            </div>
            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha" placeholder="Insira a sua senha">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary px-4" id="okButton">Ok</button>
            </div>
        </form>
    </div>
</div>